{
	"name": "Clean Links",
	"description": "__MSG_addon_description__",
	"author": "Diego Casorran (creator), \nCimbali (contributor), \nEduard Braun (German translation), \nSimon Chan (Chinese and Taiwanese translations)",
	"manifest_version": 2,
	"version": "3.0-prealpha",
	"homepage_url": "https://github.com/diegocr/CleanLinks",
	"default_locale": "en_US",
	"icons":
	{
		"48": "icon.png"
	},

	"permissions": [
		"alarms", "webRequest", "webRequestBlocking", "<all_urls>", "activeTab", "storage", "notifications"
	],

	"background":
	{
		"scripts": ["cleanlink.js", "background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>", "*://*/*", "file:///*"],
			"js": ["cleanlink.js", "inject.js"],
			"run_at": "document_end",
			"match_about_blank": true,
			"all_frames": true
		}
	],

	"options_ui":
	{
		"page": "options.html",
		"browser_style": true
	},

	"browser_action":
	{
		"default_icon": "icons/32.png"
	},

	"applications":
	{
		"gecko":
		{
			"id": "clean-links@diegocr.github.com"
		}
	}
}
